#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <5>;
        rows = <2>;     // Adding second row

        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)
            /* Commented out for gradual testing
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)          RC(2,9) RC(2,8) RC(2,7) RC(2,6) RC(2,5)
                    RC(3,1) RC(3,2) RC(3,3)                        RC(3,7) RC(3,6)
                    RC(4,0) RC(4,1) RC(4,2) RC(4,4)          RC(3,9) RC(3,8)
                                                             RC(4,9) RC(4,8)
                                                             RC(4,7)
            */
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
        row-gpios
            = <&gpio0 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    // pin 006 - Row 0 (Q,W,E,R,T)
            , <&gpio0 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    // pin 008 - Row 1 (A,S,D,F,G)
            /* Commented out for gradual testing
            , <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // pin 017
            , <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // pin 020
            , <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // pin 022
            */
            ;
    };
};
